# PostgreSQL Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/personal_site

# PostgreSQL credentials for docker-compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=personal_site

# Environment
ENVIRONMENT=production

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost,http://127.0.0.1,https://your-domain.com

# Optional: API Configuration
# API_HOST=0.0.0.0
# API_PORT=8000
# DEBUG=false
